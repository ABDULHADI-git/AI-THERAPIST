generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch", "fullTextIndex"]
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Therapist {
  id           String @id @default(uuid())
  name         String @db.Text
  userId       String
  userName     String
  src          String
  description  String
  instructions String @db.Text
  seed         String @db.Text

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  Message   Message[]

  @@fulltext([name])
}

enum Role {
  system
  user
}

model Message {
  id        String   @id @default(uuid())
  role      Role
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  therapistId String
  userId      String
  therapist   Therapist @relation(fields: [therapistId], references: [id])

  @@index([therapistId])
}
